# Security Group for Jump Server
# -----------------------------
resource "aws_security_group" "jumper-SG" {
  vpc_id = aws_vpc.main.id
# Only SSH access from anywhere
  ingress {
    from_port   = 22
    to_port     = 22
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }
# Allow all outbound traffic
  egress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }

  tags = {
    Name = "jumper-SG"
  }
}
